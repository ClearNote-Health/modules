{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "conda environment yaml",
    "description": "Validate the environment.yml file for an nf-core module",
    "type": "object",
    "properties": {
        "channels": {
            "type": "array",
            "items": [
                {
                    "enum": ["conda-forge"]
                },
                {
                    "enum": ["bioconda"]
                }
            ],
            "minItems": 2
        },
        "dependencies": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["channels", "dependencies"],
    "not": { "required": ["name"] }
}
