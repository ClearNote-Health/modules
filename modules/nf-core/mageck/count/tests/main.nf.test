// nf-core modules test mageck/count
nextflow_process {

    name "Test Process MAGECK_COUNT"
    script "../main.nf"
    process "MAGECK_COUNT"

    tag "modules"
    tag "modules_nfcore"
    tag "mageck"
    tag "mageck/count"

    test("mus_musculus - fastq") {

       // config "./nextflow.config"

        when {
            process {
                """
                input[0] = [ [ id:'test,test2', single_end:true] , // meta map
                [file(params.test_data['mus_musculus']['illumina']['test_1_fastq_gz'],checkIfExists: true),
                file(params.test_data['mus_musculus']['illumina']['test_2_fastq_gz'], checkIfExists: true)]
                ]
                input[1] = file(params.test_data['mus_musculus']['csv']['library'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("mus_musculus - fastq - stub" ) {

        options "-stub"
        config "./nextflow.config"

        when {
            process {
                """
                input[0] = [ [ id:'test,test2', single_end:true] , // meta map
                [file(params.test_data['mus_musculus']['illumina']['test_1_fastq_gz'],checkIfExists: true),
                file(params.test_data['mus_musculus']['illumina']['test_2_fastq_gz'], checkIfExists: true)]
                ]
                input[1] = file(params.test_data['mus_musculus']['csv']['library'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match()
                }
            )
        }

    }


}
