nextflow_process {

    name "Test Process MAGECK_TEST"
    script "../main.nf"
    process "MAGECK_TEST"

    tag "modules"
    tag "modules_nfcore"
    tag "mageck"
    tag "mageck/test"

    test("mageck-test - csv") {

        config "./nextflow.config"

        when {
            process {
                """
                input[0] = [
                 [ id:'test', single_end:false ], // meta map
                 file(params.test_data['mus_musculus']['csv']['count_table'], checkIfExists: true)
             ]
                """
            }
        }

                then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert snapshot(
                    process.out.gene_summary,
                    process.out.sgrna_summary,
                    process.out.r_script,
                    process.out.versions
                    )
                }
            )
        }

    }

    test("mageck-test-day0 - csv") {

        config "./nextflow-day0_label.config"

        when {
            process {
                """
                input[0] = [
                 [ id:'test', single_end:false ], // meta map
                 file(params.test_data['mus_musculus']['csv']['count_table'], checkIfExists: true)
             ]

                """
            }
        }

                then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() },
                { assert snapshot(
                    process.out.gene_summary,
                    process.out.sgrna_summary,
                    process.out.r_script,
                    process.out.versions
                    )
                }
            )
        }

    }

}
