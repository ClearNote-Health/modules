nextflow_process {

    name "Test Process RTN_TNI"
    script "../main.nf"
    process "RTN_TNI"

    tag "modules"
    tag "modules_nfcore"
    tag "rtn"
    tag "rtn/tni"

    test("musmusculus tni expression matrix") {
        when {
            process {
                """
                //input[0] = file(params.test_data['mus_musculus']['genome']['rnaseq_matrix'], checkIfExists: true)
                input[0] = file(params.test_data['homo_sapiens']['genome']['affy_array_samplesheet'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
                // See https://nf-co.re/docs/contributing/tutorials/nf-test_assertions for more information and examples.
            )
        }

    }

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used but keep the " - stub" suffix.
    test("musmusculus tni expression matrix - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = file(params.test_data['mus_musculus']['genome']['rnaseq_matrix'], checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
            )
        }

    }

}
